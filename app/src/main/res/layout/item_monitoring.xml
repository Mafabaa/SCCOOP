<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="6dp"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconItemDataMonitoring"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:src="@drawable/thermometer_icon"/>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textJudulMonitoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suhu Celcius"
                android:textSize="20sp"
                android:fontFamily="@font/quicksandmedium" />

            <TextView
                android:id="@+id/txtViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandsemibold"
                android:text="0"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/txtStatusMonitoring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/quicksandregular"
                android:text="C"
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transline_red"/>

        <TextView
            android:id="@+id/txtKeteranganMonitoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp"
            android:text="suhu"
            android:fontFamily="@font/quicksandsemibold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>